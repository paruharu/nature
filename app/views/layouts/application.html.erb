<!DOCTYPE html>
<html>
  <head>
    <title>Nature</title>
    <%= csrf_meta_tags %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!--gem gonを使用できるようにする-->
    <%= include_gon %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">

    <!--画面スライダー-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.min.js"></script>
    <script>
     $(function() {
     $('.slider').bxSlider(
         {maxSlides: 2,
          slideWidth: 700 });
     });
　　</script>

  </head>

  <body>
   <header>
     <nav class="navbar navbar-expand-lg navbar-white", style="background-color: #B0E0E6;">
      <div class="container">
       <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
      <li>
        <%= link_to '地図', post_images_path,class: 'fas fa-map-pin btn btn-outline-dark mr-0', style: 'margin: 13px' %>
      </li>
    　<li>
        <%= link_to 'ジャンル', search_post_images_path,class: 'fas fa-search-location btn btn-outline-dark mr-0', style: 'margin: 13px' %>
      </li>

    　<li>
        <%= link_to '投稿', new_post_image_path,class: 'fas fa-camera-retro btn btn-outline-dark', style: 'margin: 13px' %>
      </li>
      <li>
        <%= link_to 'マイページ',  user_path(current_user.id),class: 'far fa-address-card btn btn-outline-dark', style: 'margin: 13px' %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_user_session_path,class: 'fas fa-sign-out-alt btn btn-outline-dark', style: 'margin: 13px', method: :delete %>
      </li>
      <% else %>
    　<li>
    　  <%= link_to "ホーム", root_path ,class: 'fas fa-home btn btn-outline-dark mr-0', style: 'margin: 15px' %>
  　   </li>
      <li>
        <%= link_to "新規登録", new_user_registration_path, class: 'fas fa-user-plus btn btn-outline-dark', style: 'margin: 15px' %>
      </li>
      <li>
        <%= link_to "ログイン", new_user_session_path ,class: 'fas fa-sign-in-alt btn btn-outline-dark', style: 'margin: 15px' %>
      </li>

      <% end %>

       </ul>
      </div>
     </nav>
    </header>

    <%= notice %>
    <%= yield %>


     <%# script{src: "https://maps.googleapis.com/maps/api/js?key=#{AIzaSyC_tiqnCsg_w_qy1zBf2AC5C-sWLBcuN50}&callback=initMap"} %>
     <%# script{src: "//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"} %>
     <%# script{src: "//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js", type:"text/javascript"}%>

  </body>
</html>
