<!DOCTYPE html>
<html>
  <head>
    <title>Nature</title>
    <%= csrf_meta_tags %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!--gem gonを使用できるようにする-->
    <%= include_gon %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
   <header>
     <nav class="navbar navbar-expand-lg navbar-white bg-dark">
      <div class="container">
       <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
      <li>
        <%= link_to '地図', post_images_path,class: 'btn btn-outline-info mr-0', style: 'margin: 15px' %>
      </li>
    　<li>
        <%= link_to '投稿', new_post_image_path,class: 'btn btn-outline-info', style: 'margin: 15px' %>
      </li>
      <li>
        <%= link_to 'マイページ',  user_path(current_user.id),class: 'btn btn-outline-info', style: 'margin: 15px' %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_user_session_path,class: 'btn btn-outline-info', style: 'margin: 15px', method: :delete %>
      </li>
      <% else %>
    　<li>
    　  <%= link_to "ホーム", root_path ,class: 'btn btn-outline-info mr-0', style: 'margin: 15px' %>
  　   </li>
      <li>
        <%= link_to "新規登録", new_user_registration_path, class: 'btn btn-outline-info', style: 'margin: 15px' %>
      </li>
      <li>
        <%= link_to "ログイン", new_user_session_path ,class: 'btn btn-outline-info', style: 'margin: 15px' %>
      </li>
      <li>
        <!--仮-->
        <%= link_to '地図', maps_path,class: 'btn btn-outline-info mr-0', style: 'margin: 15px' %>
      </li>
      <% end %>

       </ul>
      </div>
     </nav>
    </header>

    <%= notice %>
    <%= yield %>
  </body>
</html>
