
<h1>投稿フォーム</h1>
<%= form_with model: @post_image, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>撮影場所</h4>
  <%= f.text_field :address %>
  <h4>カテゴリー</h4>
  <%= f.select :genre, ['森', '山', '川', '湖', '空', '海', '公園'], {include_blank: '選択ボックス'}, class: 'genre' %>

  <h4>説明</h4>
  <%= f.text_area :introduction %>
  <%= f.submit '投稿' %>
<% end %>