
　<h4>投稿詳細</h4>
　<div>
  <%= attachment_image_tag @post_image, :image %>
  <p>タイトル：<%= @post_image.title %></p>
  <p>撮影場所：<%= @post_image.address %></p>
  <p>カテゴリー：<%= @post_image.genre %></p>
  <p>説明：<%= @post_image.introduction %></p>
  <p>投稿者：<%= @post_image.user.name %></p>
  <p>投稿日時：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
　</div>

  <% if @post_image.user == current_user %>
    <%= link_to "編集", edit_post_image_path(@post_image.id) %>
    <%= link_to "削除", post_image_path(@post_image.id), method: :delete, data: {confirm: '本当に投稿を削除しますか？'} %>
  <% end %>