<br>
<body class="background">
 <div class="container">
  <div class="d-flex align-items-center justify-content-center">
    <h3><div class="mb-4 mt-4">ログイン</div></h3>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="field">
        <strong><%= f.label :email, "メールアドレス" %></strong><br />
        <%= f.email_field :email, class: "form-control", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
      </div>
      <br>
      <div class="field">
        <strong><%= f.label :password, "パスワード" %></strong><br />
        <%= f.password_field :password, :size=>"35", class: "form-control", placeholder: "aaaaaa", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "保存する" %>
        </div>
      <% end %>
      <br>
      <div class="actions">
        <%= f.submit "ログインする", class: "btn btn-info btn-block" %>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
  </div>

 </div>
</body>
